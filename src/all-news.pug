extends pug/layout.pug

block meta
  title Все новости
block header
  +page-header({})
block content
  main
    +navigation(
      [
        {
          text: 'Главная ›', className: '',
          attrs: {href: 'index.html',}
        },
        {
          text: 'Новости', className: '',
        }
      ]
    )
    +main-content({
        title: 'Новости',
        contentSlider: false,
        contentFooter: false,
        className: '',
    })
    .section-content.section-content--news
      .section-content__wrap.section-content__wrap--news.default-slider
        ul.tab-filter.tab-filter--news.d-xl-none
          li.tab-filter__item
            a.tab-filter__btn.active(href="#") Все
          li.tab-filter__item
            a.tab-filter__btn(href="#") Производство
          li.tab-filter__item
            a.tab-filter__btn(href="#") Вакансии
        .category-filter.d-none.d-xl-block
          +title-wrap('Новости')
          ul.category-filter__list
            li.category-filter__item
              +news-category({
                activeClass: 'active',
                categoryValue: 'all',
                categoryName: 'Все',
                srcImage: 'img/content/news-category-item-1.png',
              })
            li.category-filter__item
              +news-category({
                activeClass: '',
                categoryValue: 'production',
                categoryName: 'Производство',
                srcImage: 'img/content/news-category-item-2.png',
              })
            li.category-filter__item
              +news-category({
                activeClass: '',
                categoryValue: 'vacancy',
                categoryName: 'Вакансии',
                srcImage: 'img/content/news-category-item-1.png',
              })
        .swiper-container.js-auto-slider
          .swiper-wrapper.default-slider__column
            .section-content__item
              +preview()
            .section-content__item
              +preview()
            .section-content__item
              +preview()
            .section-content__item
              +preview()
            .section-content__item
              +preview()
            .section-content__item
              +preview()
      +is-loading('Loading...')
block footer
  +page-footer()
