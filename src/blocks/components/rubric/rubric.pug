mixin rubric({video, img, text})
  a.rubric(href=`${video ? "#" : `img/test/${img}`}`)&attributes(attributes)
    if (video)
      video(src="https://img.artlebedev.ru/everything/thunder/morda/cover.mp4"  playsinline=""  autoplay="" muted loop)
    else
      img(src=`img/test/${img}` alt="Резинотехнические изделия")
    .rubric__info(style="background: linear-gradient(360deg, #D2D8E4 0%, rgba(210, 216, 228, 0) 100%);")
      p.rubric__desc= text
