mixin main-content({title, mainSlider, contentSlider, contentFooter, className, productSlider, breadcrumbs, video, shared})
  article.main-content&attributes(attributes)
    if(breadcrumbs === true)
      .main-content__breadcrumbs.d-none.d-xl-block
        +tags-list({
          list: [
            {
              text: 'Главная ', className: '',
              attrs: {href: 'index.html',}
            },
            {
              text: 'Продукция', className: '',
              attrs: {href: ''},
            }
          ],
          tagLinkTag: 'a'
        })
    section.main-content__wrap
      if(title)
        header.main-content__header(class= className)
          h1.title-big.main-content__title= title
      if(mainSlider === true)
        .main-content__container.main-content__container--main
          .swiper-container(class=`${productSlider === true ? 'js-product-slider' : 'js-main-slider'}`)
            .swiper-wrapper
              if(video)
                .swiper-slide
                  .main-content__slide
                    video(src=video id="video" allow="autoplay" playsinline="" width="100%" autoplay muted loop)
