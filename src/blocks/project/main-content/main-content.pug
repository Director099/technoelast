              //.swiper-slide
              //  .main-content__slide
              //    img(src="img/content/main-slide-1.jpg" alt="Резинотехнические изделия")
          .swiper-button-next
          .swiper-button-prev
          .swiper-pagination.main-content__pagination
      if(contentSlider === true)
        .main-content__container.main-content__container--company
          .swiper-container.js-company-slider
            .swiper-wrapper
              if(video === true)
                .swiper-slide
                  .main-content__slide
                    video(src="https://barashev.com/image/video/Barashev.mp4" id="video" allow="autoplay" playsinline="" width="100%" autoplay muted loop)
              .swiper-slide
                a.main-content__slide(href="https://www.youtube.com/watch?v=_sI_Ps7JSEk&ab_channel=JazzandBluesExperience" data-fancybox="")
                  img(src="img/content/content-1.jpg" alt="Резинотехнические изделия")
